@model TrabajoFinalLabIV.Models.Jugador

@{
    ViewData["Title"] = "Detalles del Jugador";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ajusta la ruta al diseño compartido correcto.
}

<div class="container">
    <h1 class="mt-5 text-center">Detalles del Jugador</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Foto</dt>
                        <dd class="col-sm-8">
                            <img src="~/images/jugadores/@Model.Foto"
                                 class="rounded-circle"
                                 height="100" width="100"
                                 asp-append-version="true"
                                 alt="Foto del Jugador" />
                        </dd>
                        <dt class="col-sm-4">Apellido</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>
                        <dt class="col-sm-4">Nombres</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombres)</dd>
                        <dt class="col-sm-4">Biografía</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Biografia)</dd>
                        <dt class="col-sm-4">Club</dt>
                        <dd class="col-sm-8">
                            @if (@Model.Club != null)
                            {
                                @Html.DisplayFor(model => model.Club.Nombre)
                            }
                            else
                            {
                                <span class="text-danger">Este jugador no se encuentra asociado a un club.</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

